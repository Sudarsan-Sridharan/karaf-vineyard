<features name="karaf-vineyard-${project.version}" 
    xmlns="http://karaf.apache.org/xmlns/features/v1.4.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.4.0 http://karaf.apache.org/xmlns/features/v1.4.0">

    <repository>mvn:org.apache.cxf.karaf/apache-cxf/${cxf.version}/xml/features</repository>
    <repository>mvn:org.apache.camel.karaf/apache-camel/2.21.1/xml/features</repository>
    
    <feature name="vineyard" version="${project.version}" description="Meta feature installing common Vineyard features">
        <feature version="${project.version}">vineyard-common</feature>
    </feature>

    <feature name="vineyard-common" version="${project.version}" description="Karaf Vineyard Common">
        <feature>eventadmin</feature>
        <feature>scr</feature>
        <bundle>mvn:org.apache.karaf.vineyard/org.apache.karaf.vineyard.common/${project.version}</bundle>
    </feature>
    
    <feature name="vineyard-gateway" version="${project.version}" description="Karaf Vineyard Gateway">
        <feature>vineyard-common</feature>
        <feature prerequisite="true">http</feature>
        <feature prerequisite="true">scr</feature>
        <feature>camel-core</feature>
        <bundle>mvn:org.apache.karaf.vineyard.gateway/org.apache.karaf.vineyard.gateway.api/${project.version}</bundle>
        <bundle>mvn:org.apache.karaf.vineyard.gateway/org.apache.karaf.vineyard.gateway.bridge/${project.version}</bundle>
    </feature>

    <feature name="vineyard-registry-datasource" version="${project.version}"
             description="Karaf Vineyard Datasource for Registry API">
        <config name="org.ops4j.datasource-vineyard">
            osgi.jdbc.driver.class=org.apache.derby.jdbc.EmbeddedDriver
            dataSourceName=jdbc/vineyard
            url=jdbc:derby:data/vineyard/derby;create=true
        </config>
        <capability>
            osgi.service;objectClass=javax.sql.DataSource;effective:=active;osgi.jndi.service.name=jdbc/vineyard
        </capability>
    </feature>

    <feature name="vineyard-registry" version="${project.version}"
             description="Karaf Vineyard Registry API">
        <feature version="${project.version}">vineyard-common</feature>
        <feature version="${project.version}">vineyard-registry-datasource</feature>
        <feature>transaction</feature>
        <feature>jndi</feature>
        <feature>jdbc</feature>
        <feature>pax-jdbc-config</feature>
        <feature>pax-jdbc-derby</feature>
        <feature>pax-jdbc-pool-dbcp2</feature>
        <feature dependency="true">aries-blueprint</feature>
        <feature version="[2,3)">jpa</feature>
        <feature version="[2,3)">eclipselink</feature>
        <feature version="${cxf.version}">cxf-jaxrs</feature>
        <feature version="${cxf.version}">cxf-rs-security-cors</feature>
        <feature version="${cxf.version}">cxf-rs-description-openapi-v3</feature>
        <bundle dependency="true">mvn:com.fasterxml.jackson.core/jackson-core/${jackson.version}</bundle>
        <bundle dependency="true">mvn:com.fasterxml.jackson.core/jackson-annotations/${jackson.version}</bundle>
        <bundle dependency="true">mvn:com.fasterxml.jackson.core/jackson-databind/${jackson.version}</bundle>
        <bundle dependency="true">mvn:com.fasterxml.jackson.jaxrs/jackson-jaxrs-base/${jackson.version}</bundle>
        <bundle dependency="true">mvn:com.fasterxml.jackson.jaxrs/jackson-jaxrs-json-provider/${jackson.version}</bundle>
        <bundle>mvn:org.apache.karaf.vineyard.registry/api/${project.version}</bundle>
    </feature>

    <feature name="vineyard-registry-policy-datasource" version="${project.version}"
             description="Karaf Vineyard Datasource for Registry Policy">
        <config name="org.ops4j.datasource-vineyard-policy">
            osgi.jdbc.driver.class=org.apache.derby.jdbc.EmbeddedDriver
            dataSourceName=jdbc/vineyard-policy
            url=jdbc:derby:data/vineyard-policy/derby;create=true
        </config>
        <capability>
            osgi.service;objectClass=javax.sql.DataSource;effective:=active;osgi.jndi.service.name=jdbc/vineyard-policy
        </capability>
    </feature>

    <feature name="vineyard-registry-policy" version="${project.version}"
             description="Karaf Vineyard Registry Policy">
        <feature version="${project.version}">vineyard-registry</feature>
        <feature version="${project.version}">vineyard-registry-policy-datasource</feature>
        <bundle>mvn:org.apache.karaf.vineyard.registry/policy/${project.version}</bundle>
    </feature>

    <feature name="vineyard-registry-resource-rest-datasource" version="${project.version}"
             description="Karaf Vineyard Datasource for Registry Resource REST">
        <config name="org.ops4j.datasource-vineyard-resource-rest">
            osgi.jdbc.driver.class=org.apache.derby.jdbc.EmbeddedDriver
            dataSourceName=jdbc/vineyard-resource-rest
            url=jdbc:derby:data/vineyard-resource-rest/derby;create=true
        </config>
        <capability>
            osgi.service;objectClass=javax.sql.DataSource;effective:=active;osgi.jndi.service.name=jdbc/vineyard-resource-rest
        </capability>
    </feature>

    <feature name="vineyard-registry-resource-rest" version="${project.version}"
             description="Karaf Vineyard Registry Resource REST">
        <feature version="${project.version}">vineyard-registry</feature>
        <feature version="${project.version}">vineyard-registry-resource-rest-datasource</feature>
        <bundle>mvn:org.apache.karaf.vineyard.registry/rest/${project.version}</bundle>
    </feature>

</features>